{% extends "default.html.twig" %}

{% block body %}
    <div class="container mt-5">
        <h1>Home page</h1>
        <h3>Articles</h3>
        <div class="row">
            {% for item in items %}
                <div class="col-12 col-md-4 mb-3">
                    <div class="card">
                        <div class="card-header">
                            <h4>{{ item.title }}</h4>
                        </div>
                        <div class="card-body">
                            <p>{{ item.content }}</p>
                        </div>
                        <div class="card-footer">
                            <p class="text-danger">{{ item.author }}</p>
                            <p class="text-success">{{ item.created_at }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}